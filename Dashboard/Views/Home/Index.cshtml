@{
	ViewData["Title"] = "DevOps";
}

<div class="col-10">
 <h4 class="mb-3">Your Azure DevOps projects</h4>
 <table id="projects" class="table table-striped table-hover table-fw-widget">
  <thead>
   <tr>
	<th>Name</th>
    <th>ProcessTemplate</th>
    <th>Days old</th>
   </tr>
  </thead>
 </table>
</div>

@section Scripts {
<script type="text/javascript">

$(document).ready( function () {
	var table = $("#projects").DataTable({
        ajax: {
            url: '/Home/GetDevOpsData',
            dataSrc: ''
        },
        columns: [
            { data: "Name" },
            { data: "ProcessTemplate" },
            { data: "ProjectAge" }
        ]
	});
});

</script>
}